<p id="notice"><%= notice %></p>

<p>
  <strong>Theme:</strong>
  <%= @party.theme %>
</p>

<p>
  <strong>Date:</strong>
  <%= @party.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @party.time %>
</p>

<p>
  <strong>Rsvp deadline:</strong>
  <%= @party.rsvp_deadline %>
</p>

<p>
  <strong>Invitations:</strong>
  <ul>
    <% @party.invitations.each do |invite| %>
      <li><%= invite.user.email %> - <%= invite.rsvp  %> - <%= link_to 'Remove Invitation', [@party, invite], method: :delete, data: { confirm: 'Are you sure?' } %></li>
      <% end %>
  </ul>
</p>
<% if @party.location != nil %>
<p>
  <strong>Address:</strong>
  <%= @party.location.address %>


<%= content_tag :div, class: "lat_information", data: {lat: @party.location.latitude, lng: @party.location.longitude} do %>
<% end %>

 <div id="map" style="height: 500px; width: 500px; margin: auto;"></div>
<% end %>

<p><%= link_to "Add Invitees", new_party_invitation_path(@party) %></p>

<% link = "/contacts/gmail/" %>
<a href=<%=link %>>Gmail</a>
<%= link_to pluralize(@party.invitations.size, 'invitation'), party_invitations_path(@party) %> |
<%= link_to 'Edit', edit_party_path(@party) %> |
<%= link_to 'Back', parties_path %>


