<p id="notice"><%= notice %></p>

<h1>Parties</h1>

<table>
  <thead>
    <tr>
      <th>Theme</th>
      <th>Date</th>
      <th>Time</th>
      <th>Rsvp deadline</th>
      <th>Address</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= party.theme %></td>
        <td><%= party.date %></td>
        <td><%= party.time %></td>
        <td><%= party.rsvp_deadline %></td>
        <td><%= party.address %></td>
        <td><%= party.user %></td>
        <td><%= link_to 'Show', party %></td>
        <td><%= link_to 'Edit', edit_party_path(party) %></td>
        <td><%= link_to 'Destroy', party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

