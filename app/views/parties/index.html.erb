<p id="notice"><%= notice %></p>

<%= link_to 'New Party', new_party_path %>

<h1>Parties I organize</h1>

<table>
  <thead>
    <tr>
      <th>Theme</th>
      <th>Date</th>
      <th>Time</th>
      <th>Rsvp deadline</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= party.theme %></td>
        <td><%= party.date %></td>
        <td><%= party.time %></td>
        <td><%= party.rsvp_deadline %></td>
        <td><%= party.location.address unless party.location.nil? %></td>
        <td><%= link_to 'Show', party %></td>
        <td><%= link_to 'Edit', edit_party_path(party) %></td>
        <td><%= link_to 'Destroy', party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h1>My current Invitations</h1>

<table>
  <thead>
    <tr>
      <th>Theme</th>
      <th>Date</th>
      <th>Time</th>
      <th>Rsvp deadline</th>
      <th>Address</th>
      <th>Gift Receipient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invite| %>
      <tr>
        <td><%= invite.party.theme %></td>
        <td><%= invite.party.date %></td>
        <td><%= invite.party.time %></td>
        <td><%= invite.party.rsvp_deadline %></td>
        <td><%= invite.party.location.address unless party.location.nil? %></td>
        <td><%= invite.receipient.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
